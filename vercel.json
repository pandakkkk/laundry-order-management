{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/order/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api|static|.*\\..*|_next).*)",
      "destination": "/index.html"
    }
  ]
}

